<!DOCTYPE html>
<html lang="en">

<%- include('kpi-layout/header') %>

<body id="page-top">

  <%- include('kpi-layout/nav') %>

  <div id="wrapper">

    <!-- Sidebar -->
    <%- include('kpi-layout/sidebar') %>

    <div id="content-wrapper">

      <div class="container-fluid">

        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
          </li>
          <li class="breadcrumb-item active">Thiết lập KPI Giảng viên</li>
        </ol>

        <!-- Area Chart Example-->
        <div class="container-fluid">
                <form method="POST">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                        <label for="">Số khóa học</label>
                        <input type="number" class="form-control" name="number_of_course" id="number_of_course"  value=<%= number_of_course %>>
                        </div>
                        <div class="form-group col-md-6">
                        <label for="">Số buổi học</label>
                        <input type="number" class="form-control" name="number_of_lesson" id="number_of_lesson" value=<%= number_of_lesson %>>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-12">
                        <label for="">Số câu quiz</label>
                        <input type="number" class="form-control" name="number_of_quiz" id="number_of_quiz" value=<%= number_of_quiz %>>
                        </div>
                        
                    </div>

                    </div>
                    <div class="form-row">
                        <div class="col-md-5"></div>
                        <div class="form-group col-md-2">
                            <button type="submit" class="btn btn-primary" style="width: 100%">Submit</button>
                        </div>
                        <div class="col-md-5"></div>
                    </div>
                </form>   
        </div>

      </div>
      <!-- /.container-fluid -->

      <!-- Sticky Footer -->
      <%- include('kpi-layout/sticky-footer') %>

    </div>
    <!-- /.content-wrapper -->

  </div>
  <!-- /#wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <%- include('kpi-layout/logout-modal') %>

  <%- include('kpi-layout/footer') %>

</body>
<script>

$('#btnTempt').on('click', function(){
    alert($('#inputTimeKPI').val());
});
</script>
</html>
